<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Pagerduty MVP</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
</head>

<body>
    <h1>Dishes App</h1>
    
    <div class="add-delete">
        <form id="search-dish-form" name="search-dish-form">
            <input type="text" placeholder="name" name="dish_name" id="dish_name">
            <button type="button" onclick=searchDish()>Search</button>
        </form>
        <form id="add-dish-form" name="add-dish-form">
            <input type="text" placeholder="name" name="dish_name" id="dish_name">
            <button type="button" onclick=addDish()>Add</button>
        </form>
        <form id="delete-dish-form" name="delete-dish-form">
            <input type="text" placeholder="dish id" name="dish_id" id="dish_id">
            <button type="button" onclick=deleteDish()>Delete</button>
        </form>
    </div>

    <div class="tables">
        <table class="dishes">
            <td style="border-top: 0px; font-weight: 600;">Dish ID</td>
            <td style="border-top: 0px; font-weight: 600;">Name</td>
            <% dishes.forEach((dish) => {%>
                <tr class="dish">
                    <td>
                        <%= dish.dish_id %>
                    </td>
                    <td>
                        <%= dish.name %>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
    <script src="/js/script.js"></script>
</body>

</html>